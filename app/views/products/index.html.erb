<% if signed_in? %>
<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Imagen</th>
    <th class="center">Codigo</th>
    <th class="center">Nombre</th>
    <th class="center">Descripcion</th>
    <th class="center">Precio</th>
    <th class="center">Acciones</th>
  </tr>

  <% @products_admin.each do |product| %>
    <tr>
      <td class="center">
        <%= image_tag product.image_url(:thumb) %>
      </td>
      <td class="center">Cod.: <%= product.codigo %></td>
      <td class="center"><%= product.name %></td>
      <td class="center"><%= product.description %></td>
      <td class="center"><%= product.price %></td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
            Acciones <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Ver", product, class: "btn btn-link" %></li>
            <li><%= link_to "Editar", edit_product_path(product), class: "btn btn-link" %></li>
            <li><%= link_to 'Eliminar', product, method: :delete, data: { confirm: "Estas seguro/a?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

    <br>

    <%= link_to 'Agregar Producto', new_product_path, class: "btn btn-primary" %>
<% else %>
    <div class="row">
      <% @products.each do |product| %>
          <div class="col-md-3">  
              <div class="thumbnail">
                <%= link_to image_tag(product.image.url(:medium)), product %>
                   <div class="caption center">
                           <p>Cod.: <%= product.codigo %></p>
                           <h3><%= product.name %></h3>
                      
                    </div>
            </div>
        </div>
        <% end -%>
    </div>
<% end -%>

<%= link_to 'Atras', categories_path, class: "btn btn-success" %>