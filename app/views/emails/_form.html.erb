<%= form_for(@email) do |f| %>
      <% if @email.errors.any? %>
          <div id="error_explanation" class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <h4><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h4>

            <ul>
            <% @email.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
<div class="row">
    <div class="col-md-6">


     <div class="form-group">
        <%= f.label :name,"Nombre" %><br>
        <%= f.text_field :name, class: "form-control", placeholder: "Ingrese Nombre", required: "required" %>
      </div>
      <div class="form-group">
        <%= f.label :email, "Email" %><br>
        <%= f.text_field :email, class: "form-control", placeholder: "Ingrese email", required: "required" %>
      </div>
      <div class="form-group">
        <%= f.label :asunto, "Asunto" %><br>
        <%= f.text_field :asunto, class: "form-control", placeholder: "Ingrese asunto", required: "required" %>
      </div> 
  </div>
  <div class="col-md-6">
      <div class="form-group">
        <%= f.label :message, "Mensaje" %><br>
        <%= f.text_area :message, class: "form-control", cols: "25", rows: "9", required: "required", placeholder: "Ingrese el mensaje" %>
      </div>
  </div>
  <div class="col-md-12">
          <div class="action">
            <%= f.submit "Enviar mensaje", class: "btn btn-primary pull-right" %>
          </div>
  </div>
  </div>
  <% end -%>

