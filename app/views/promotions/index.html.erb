<% if user_signed_in? %>
  <table class="table table-striped table-bordered">
  <tr>
    <th class="center">Imagen</th>
    <th class="center">Name</th>
    <th class="center">Descripcion</th>
    <th class="center">Opcion</th>
    <th class="center">Acciones</th>
  </tr>

  <% @promotions_admin.each do |promotion| %>
    <tr>
      <td class="center">
        <%= image_tag promotion.image.url(:medium) %>
      </td class="center">
      <td class="center"><%= promotion.name %></td>
      <td class="center"><%= promotion.description %></td>
      <td class="center"><%= promotion.option %></td>
      <td class="center">
        <div class="btn-group">
          <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
            Acciones <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "Ver", promotion, class: "btn btn-link" %></li>
            <li><%= link_to "Editar", edit_promotion_path(promotion), class: "btn btn-link" %></li>
            <li><%= link_to 'Eliminar', promotion, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

  <%= link_to 'Agregar Nueva Promocion', new_promotion_path, class: "btn btn-primary" %>
<% else %>
  <div class="row">
  <% @promotions.each do |promotion| %>
    <div class="thumbnail">
      <%= image_tag promotion.image_url %>
    </div>
  <% end %>
  </div>
<% end %>
