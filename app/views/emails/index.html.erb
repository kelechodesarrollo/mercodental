<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Nombre</th>
    <th class="center">Email</th>
    <th class="center">Asunto</th>
    <th class="center">Mensage</th>
    <th class="center">Acciones</th>
  </tr>

  <% @emails.each do |email| %>
    <tr>
      <td class="center"><%= email.name %></td>
      <td class="center"><%= email.email %></td>
      <td class="center"><%= email.asunto %></td>
      <td><%= email.message %></td>
      <td class="center"><%= link_to 'Eliminar', email, method: :delete, data: { confirm: "Estas seguro/a?" }, class: "btn btn-warning" %></td>
      
    </tr>
  <% end %>
</table>



