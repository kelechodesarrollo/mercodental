<header id="header">
    <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-xs-4">
                        <div class="top-number"><p style="font-color: #fff;"><i class="fa fa-phone-square"></i>  (021)677-051 / (0985)518-081</p></div>
                    </div>
                    <div class="col-sm-6 col-xs-8">
                       <div class="social">
                            <ul class="social-share">
                                <li><a href="https://www.facebook.com/forestadent.paraguay" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="https://twitter.com/forestadent" target="_blank"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="https://www.facebook.com/forestadent.paraguay" target="_blank"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                            <div class="search">
                                <form role="form">
                                    <input type="text" class="search-form" autocomplete="off" placeholder="Buscar">
                                    <i class="fa fa-search"></i>
                                </form>
                           </div>
                       </div>
                    </div>
                </div>
            </div><!--/.container-->

     </div><!--/.top-bar-->
     <div class="row">
        <div class="col-md-6">
            <%= image_tag("imagen.png", {class: "img-responsive", style: "border: 2px solid; border-radius: 0 0 25px;"}) %>
        </div>
        <div class="col-md-3 col-md-offset-2">
            <%= image_tag("logo.jpg", {class: "img-responsive", width: "350px"}) %>
        </div>
     </div>
     
    <nav class="navbar navbar-inverse" style="background-color: #fff;" role="banner">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        
                    </div>
    				
                    <div class="collapse navbar-collapse navbar-right">
                        <ul class="nav navbar-nav">
                            <li class="<%= params[:controller] == 'pages' && params[:action] == 'home' ? 'active' : '' %>"><%= link_to "Inicio", root_path, data: { no_turbolink: true } %></li>
                            <li class="<%= params[:controller] == 'categories' || params[:controller] == 'products' ? 'active' : '' %>"><%= link_to "Productos", categories_path %></li>
                            <li class="<%= params[:controller] == 'promotions' ? 'active' : '' %>"><%= link_to "Promociones", promotions_path %></li>
                            <li class="<%= params[:controller] == 'pages' && params[:action] == 'about' ? 'active' : '' %>"><%= link_to "Nosotros", pages_about_path %></li>
                            <li class="<%= params[:controller] == 'events' ? 'active' : '' %>"><%= link_to "Eventos", events_path %></li>
                            <li class="<%= params[:controller] == 'emails' && params[:action]== 'new' ? 'active' : '' %>"><%= link_to "Contacto", new_email_path %></li>
                                                   
                        </ul>
                    </div>
                </div><!--/.container-->
            </nav><!--/nav-->

</header> 
